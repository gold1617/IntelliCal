<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rishab.intellical.AddForDaysActivity">


    <TextView
        android:id="@+id/daysPrompt"
        android:layout_width="175dp"
        android:layout_height="36dp"
        android:layout_marginLeft="117dp"
        android:layout_marginTop="64dp"
        android:text="@string/num_days_prompt"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteY="73dp"/>

    <EditText
        android:id="@+id/daysText"
        android:layout_width="67dp"
        android:layout_height="42dp"
        android:ems="10"
        android:inputType="number"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/daysPrompt"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/daysPrompt"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/daysPrompt"
        app:layout_constraintHorizontal_bias="0.51"/>

    <Button
        android:id="@+id/addAll"
        android:layout_width="79dp"
        android:layout_height="47dp"
        android:layout_marginBottom="315dp"
        android:layout_marginTop="8dp"
        android:text="@string/add_events"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/daysText"
        app:layout_constraintVertical_bias="0.175"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/daysText"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/daysText"/>
</android.support.constraint.ConstraintLayout>
